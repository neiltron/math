%h2 #{@item.name}
%small
  Displaying:
  %span#settings_link{ :href => '#' }
    Daily Total
    %span.arrow &#x25BE;
    %ul#settings_menu
      %li
        %a{ :href => '/hello' } Daily Total
      %li
        %a{ :href => '/hello' } Daily Average

#graph.lines
  %svg{ :style => 'height: 200px' }

%table.records
  - @item.records.each do |record|
    %tr
      %td #{record.amount}
      %td #{record.created_at}

%script{ :type => 'text/javascript' }
  graph_data = { values: [#{@item.records.map{ |record| record.amount if !record.amount.nil? }.join(',')}] }