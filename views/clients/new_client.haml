#oauth
  %h1 Register your application

  - if @client.errors.any?
    %ul.errors
      - @client.errors.full_messages.each do |message|
        %li #{message}

  %form{ :method => "post", :action => "/oauth/apps" }
    %p
      %label{ :for => "name" }
      %input{ :type => "text", :name => "name", :id => "name", :placeholder => "Application name" }

    %p
      %label{ :for => "redirect_uri" }
      %input{ :type => "text", :name => "redirect_uri", :id => "redirect_uri", :placeholder => 'Redirect URI' }

    %p
      %input{ :type => "submit", :value => "Register" }

